<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg3"
    tools:context="com.smartdoor.notthing.smartdoor1.Main5Activity">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="163dp"
        android:layout_height="154dp"
        app:srcCompat="@drawable/icon2"
        app:layout_constraintTop_toTopOf="@+id/guideline12"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="75dp"
        app:layout_constraintLeft_toLeftOf="@+id/guideline14" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline12"
        app:layout_constraintGuide_begin="16dp"
        android:orientation="horizontal" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline14"
        app:layout_constraintGuide_begin="20dp"
        android:orientation="vertical" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline15"
        app:layout_constraintGuide_begin="170dp"
        android:orientation="horizontal" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:text="Security Smart Door"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@+id/guideline15"
        android:layout_marginLeft="37dp"
        app:layout_constraintLeft_toLeftOf="@+id/guideline16" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:text="สถานะประตู"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/textView8"
        android:layout_marginLeft="102dp"
        app:layout_constraintLeft_toLeftOf="@+id/guideline16" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline16"
        app:layout_constraintGuide_begin="27dp"
        android:orientation="vertical" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="18sp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/textView9"
        android:layout_marginLeft="111dp"
        app:layout_constraintLeft_toLeftOf="@+id/guideline16" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="95dp"
        android:layout_height="80dp"
        app:srcCompat="@drawable/unlock"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView10"
        android:layout_marginLeft="101dp"
        app:layout_constraintLeft_toLeftOf="@+id/guideline16" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline17"
        app:layout_constraintGuide_begin="362dp"
        android:orientation="horizontal" />

    <Button
        android:id="@+id/button"
        android:layout_width="140dp"
        android:layout_height="46dp"
        android:layout_marginLeft="82dp"
        android:layout_marginTop="0dp"
        android:text="ดูประวัติการบุกรุก"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:onClick="goto_logactivity"
        app:layout_constraintLeft_toLeftOf="@+id/guideline16"
        app:layout_constraintTop_toTopOf="@+id/guideline17"
        tools:layout_editor_absoluteY="351dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="140dp"
        android:layout_height="46dp"
        android:layout_marginLeft="82dp"
        android:layout_marginTop="0dp"
        android:text="เปลี่ยนรหัสส่วนตัว"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:onClick="goto_activity4"
        app:layout_constraintLeft_toLeftOf="@+id/guideline16"
        app:layout_constraintTop_toBottomOf="@+id/button" />

    <Button
        android:id="@+id/door_btn_edit"
        android:layout_width="140dp"
        android:layout_height="46dp"
        android:layout_marginLeft="82dp"
        android:layout_marginTop="0dp"
        android:text="เปลี่ยนรหัสประตู"
        android:textAlignment="center"
        android:textSize="14sp"
        android:textStyle="bold"
        android:onClick="goto_activity6"
        app:layout_constraintLeft_toLeftOf="@+id/guideline16"
        app:layout_constraintTop_toBottomOf="@+id/button2" />

</android.support.constraint.ConstraintLayout>
